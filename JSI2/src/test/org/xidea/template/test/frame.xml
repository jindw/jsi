<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:c="http://www.xidea.org/ns/template">
	<head>
		<title>
			<c:iclude xpath="#page" xpath="//title/*" />
		</title>
		<link href="../styles/default.css" rel="stylesheet"
			type="text/css" />
		<c:iclude xpath="#page" xpath="//head/*" />
	</head>
	<body>
		<div id="header">
			<div class="title">账户管理</div>
			<div class="tab-folder">
				<a class="selected" href="index.action">用户管理</a>
				<a href="../expense/index.action">账单管理</a>
				<a href="../book/index.action">图书管理</a>
			</div>
			<div class="user">
				<a href="logout.action">退出</a>
			</div>
		</div>
		<div id="body">
			<div id="side">
				<ul>
					<li
						class="${1?'selected':''}">
						<a href="input.action">注册</a>
					</li>
					<li
						class="${1,'/group/input.action')?'selected':''}">
						<a href="../group/input.action">组团</a>
					</li>
					<li
						class="${1?'selected':''}">
						<a href="edit.action">修改资料</a>
					</li>
					<li
						class="${1?'selected':''}">
						<a href="list.action">用户列表</a>
					</li>
				</ul>
			</div>
			<div id="main">
				<c:iclude xpath="#page" xpath="//body/*" />
			</div>
		</div>
		<div id="footer"></div>
	</body>
</html>