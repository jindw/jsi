<?xml version="1.0" encoding="GBK"?>
<project name="JSI" default="build" basedir="../">
	<tstamp>
		<format property="version" pattern="yyyyMMdd" />
	</tstamp>

	<available file="../JSA/build/dest/JSA-CMD.jar" property="JSAPath" value="../JSA/classes;../JSA/build/dest/JSA-CMD.jar;../JSA/classes" />

	<target name="init">
		<delete dir="build/temp">
		</delete>
		<mkdir dir="build/temp/scripts" />
		<mkdir dir="build/dest" />
	</target>
	<target name="jar">
		<jar destfile="build/dest/JSI.jar">
			<fileset dir="web/WEB-INF/classes">
				<include name="**/*.*" />
				<exclude name="**/test/**.*" />
				<exclude name="**/sandbox/**.*" />
			</fileset>
			<zipfileset src="web/WEB-INF/lib/Template.jar" defaultexcludes="true">
				<include name="org/xidea/lite/*.js" />
			</zipfileset>
			<fileset dir="src/main">
				<include name="**/*.java" />
				<exclude name="**/test/**.*" />
				<exclude name="**/sandbox/**.*" />
			</fileset>
			<fileset dir="build/dest/">
				<include name="exported.xml" />
			</fileset>
			<zipfileset dir="src/main" prefix="META-INF">
				<include name="*.tld" />
			</zipfileset>
		</jar>
		<copy tofile="build/dest/JSI-${version}.jar" file="build/dest/JSI.jar" />
	</target>
	<target name="jar-compressed-jsidoc">
		<mkdir dir="build/dest/export/" />
		<mkdir dir="build/dest/util/" />
		<echo file="build/dest/export/__package__.js">this.setImplementation("org.xidea.jsidoc")</echo>
		<echo file="build/dest/__package__.js">this.addScript("jsidoc.js",["JSIDoc",'DependenceInfo','Exporter','ExportUI'],['org.xidea.jsidoc.util.*'])</echo>
		<jar destfile="build/dest/JSI.jar">
			<fileset dir="web/WEB-INF/classes">
				<include name="**/*.*" />
				<include name="org/xidea/test/**/*.*" />
				<exclude name="**/jsidoc/styles/*.png" />
				<exclude name="**/jsidoc/html/*.xhtml" />
				<exclude name="**/jsidoc/*.js" />
				<exclude name="**/jsidoc/export/*.*" />
				<exclude name="**/jsidoc/util/*.*" />
				<exclude name="**/test/**/*.*" />
				<exclude name="org/xidea/sandbox/**/*.*" />
			</fileset>
			<fileset dir="src/main">
				<include name="**/*.java" />
				<exclude name="**/test/**.*" />
				<exclude name="**/sandbox/**.*" />
			</fileset>
			<zipfileset dir="build/dest/" prefix="org/xidea/jsidoc">
				<include name="jsidoc.js" />
				<include name="__package__.js" />
				<include name="export/__package__.js" />
				<include name="util/__package__.js" />
				<include name="util/util.js" />
			</zipfileset>
			<zipfileset dir="src/main" prefix="META-INF">
				<include name="*.tld" />
			</zipfileset>
		</jar>
		<copy tofile="build/dest/JSI-${version}.jar" file="build/dest/JSI.jar" />
	</target>
	<target name="compress-jsidoc">
		<java classname="org.jside.jsi.tools.export.ExportAction" classpath="${JSAPath}">
			<arg value="-scriptBase" />
			<arg value="${basedir}/web/scripts" />
			<arg value="-config.ascii" />
			<arg value="false" />

			<arg value="-exports" />
			<arg value="org.xidea.jsidoc.util.*" />

			<arg value="-outputBoot" />
			<arg value="${basedir}/build/dest/boot-compress.js" />
			<arg value="-outputPackage" />
			<arg value="${basedir}/build/dest/util/__package__.js" />
			<arg value="-outputExported" />
			<arg value="${basedir}/build/dest/util/util.js" />
		</java>
		<java classname="org.jside.jsi.tools.export.ExportAction" classpath="${JSAPath}">
			<arg value="-scriptBase" />
			<arg value="${basedir}/web/scripts" />
			<arg value="-config.ascii" />
			<arg value="false" />

			<arg value="-bootCached" />
			<arg value="org.xidea.jsidoc.util.*" />

			<arg value="-exports" />
			<arg value="org.xidea.jsidoc:JSIDoc" />
			<arg value="org.xidea.jsidoc.export.*" />

			<arg value="-outputPackage" />
			<arg value="${basedir}/build/dest/jsidoc-package.js" />
			<arg value="-outputExported" />
			<arg value="${basedir}/build/dest/jsidoc.js" />
		</java>
	</target>
	<target name="compress-all">
		<java classname="org.jside.jsi.tools.export.ExportAction" classpath="${JSAPath}">
			<arg value="-scriptBase" />
			<arg value="${basedir}/web/scripts" />
			<arg value="-config.ascii" />
			<arg value="false" />
			<!--
			<arg value="-bootCached" />
			<arg value="example.*" />
			-->
			<arg value="-exports" />
			<arg value="example.*" />
			<arg value="example.alias:" />
			<arg value="example.dependence.*" />
			<arg value="example.internal.*" />
			<arg value="org.xidea.jsidoc.*" />
			<arg value="org.xidea.jsidoc.export.*" />
			<arg value="org.xidea.jsidoc.util.*" />
			<arg value="org.xidea.test.*" />
			<arg value="org.xidea.test.loader.*" />

			<arg value="-outputExported" />
			<arg value="${basedir}/build/dest/exported-all.js" />
			<arg value="-outputXML" />
			<arg value="${basedir}/build/dest/exported-all.xml" />
			<arg value="-outputJAR" />
			<arg value="${basedir}/build/dest/exported-all.jar" />
		</java>
	</target>

	<target name="buildExample" depends="jar">
		<war destfile="build/dest/JSI-example-${version}.war" webxml="web/WEB-INF/web.xml" description="http://localhost/JSI-example-${version}/scripts/jsidoc">
			<zipfileset dir="build/dest" file="JSI.jar" prefix="WEB-INF/lib/" />
			<zipfileset dir="web">
				<include name="scripts/example/**/*.*" />
				<include name="WEB-INF/lib/**/*.*" />
			</zipfileset>
		</war>
	</target>
	<target name="ftp">
		<ftp password="jindw@163.com" server="upload.sourceforge.net" userid="anonymous" action="put" remotedir="/incoming">
			<fileset file="build/dest/">
				<include name="*${version}.war" />
				<include name="JSI.jar" />
			</fileset>
		</ftp>
	</target>
	<target name="buildJSIDoc" depends="init">
		<delete file="build/dest/JSI-JSIDoc-${version}.zip">
		</delete>
		<java classpath="web/WEB-INF/classes/" classname="org.xidea.jsi.doc.SimpleCacheBuilder">
			<arg value="${basedir}/web/scripts" />
			<arg value="${basedir}/build/temp/" />
		</java>
		<zip destfile="build/dest/JSI-JSIDoc-${version}.zip" compress="true">
			<zipfileset dir="web/scripts">
				<include name="**/*.*" />
				<exclude name="**/*.db" />
				<exclude name="*/**/*.js" />
				<exclude name="*/**/*.xhtml" />
				<exclude name="*/**/*test*.html" />
				<exclude name="*/**/root-frame.html" />
			</zipfileset>
			<zipfileset dir="web/scripts/org/xidea/jsidoc/">
				<include name="root-frame.html" />
			</zipfileset>
			<zipfileset dir="build/temp/">
				<include name="jsidoc-source.js" />
			</zipfileset>
		</zip>
	</target>
	<target name="build" depends="compress-jsidoc,jar-compressed-jsidoc">
		<delete>
			<fileset dir="build/dest/">
				<include name="JSI-*.jar" />
				<include name="JSI-*.tar" />
				<include name="JSI-*.zip" />
			</fileset>
		</delete>
		<tar destfile="build/dest/JSI-${version}.tar" compression="gzip">
			<tarfileset dir="web">
				<include name="**/*.*" />
				<include name="scripts/**/*.*" />
				<exclude name="WEB-INF/classes/**/*.*" />
				<exclude name="**/*.db" />
			</tarfileset>
		</tar>
		<zip destfile="build/dest/JSI-${version}.zip" compress="true">
			<zipfileset dir="web">
				<include name="**/*.*" />
				<include name="scripts/**/*.*" />
				<exclude name="WEB-INF/classes/**/*.*" />
				<exclude name="**/*.db" />
			</zipfileset>
		</zip>
	</target>
	<target name="packageOptimize">
		<java classname="org.jside.jsi.tools.web.PackageAction" classpath="../JSA/build/dest/JSA-CMD.jar">
			<arg value="-scriptBase" />
			<arg value="${basedir}/web/scripts" />
			<arg value="-output" />
			<arg value="${basedir}/build/dest/package-gen.js" />

			<arg value="-packageName" />
			<arg value="org.xidea.jsidoc.export" />

			<arg value="-dependences" />
			<arg value="org.xidea.jsidoc" />
			<arg value="org.xidea.jsidoc.util" />
		</java>
	</target>
</project>